.dropdown-menu
	margin-right: -100%

.media-heading
	margin-bottom: 0px
.thumb
	img
		margin-right:10px

.item
	width: 255px
	height: 150px
	float: left
	margin-right: 15px
	padding 10px

	a
		color #000
		text-decoration none
	.image
		float left
		margin-right 10px
		margin-top: 0px
		width 60px
		height 60px
		border-radius 5px
		overflow hidden
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;

	h4
		overflow hidden
		margin-top: 5px
		margin-bottom: 2px
		text-overflow ellipsis
		white-space: nowrap
		width: 150px
		height: 22px

	h6
		overflow hidden
		margin-top: 0px
		text-overflow ellipsis
		white-space: nowrap
		width: 150px
		height: 22px

	.description
		overflow-y scroll
		height: 100px

