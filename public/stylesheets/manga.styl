.image
	margin-right 20px
	max-width 150px

h2
	margin-bottom 0px

h5
	margin-top 0px
	margin-bottom 20px

a
	text-decoration none
	color #000

#description
	font-size large
	line-height 120%

ul
	list-style-type none


// kindle browser not supporting position fixed ->override and set position in JS

.modal
	position absolute
	font-size large
	line-height 120%

.modal-backdrop.fade
	position absolute


.wrapper
	float right
	margin-top 12px
	margin-right 5px


// animate icon-refresh
.icon-refresh
	-webkit-animation-name rotatit
	animation-name rotatit
	-webkit-animation-duration 1s
	animation-duration 1s
	-webkit-animation-iteration-count infinite
	animation-iteration-count infinite
	-webkit-animation-timing-function linear
	animation-timing-function linear


@keyframes rotatit
	from
		-webkit-transform scale( 1 ) rotate( 0deg )
		transform scale( 1 ) rotate( 0deg )
	to
		-webkit-transform scale( 1 ) rotate( 360deg )
		transform scale( 1 ) rotate( 360deg )

