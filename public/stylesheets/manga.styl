.image
	margin-right 20px
	max-width 150px

h2
	margin-bottom 0px

h5
	margin-top 0px
	margin-bottom 20px

a
	text-decoration none
	color #000

#description
	font-size large
	line-height 120%

ul
	list-style-type none


// kindle browser not supporting position fixed ->override and set position in JS

.modal
	position absolute
	font-size large
	line-height 120%

.modal-backdrop.fade
	position absolute


.wrapper
	float right !important
	margin-top 12px !important
	margin-right 5px !important


// animate icon-refresh
.icon-refresh
	-webkit-animation-name rotatit
	animation-name rotatit
	-webkit-animation-duration 2s
	animation-duration 2s
	-webkit-animation-iteration-count infinite
	animation-iteration-count infinite
	-webkit-animation-timing-function linear
	animation-timing-function linear


@keyframes rotatit
	from
		-webkit-transform scale( 1 ) rotate( 0deg )
		transform scale( 1 ) rotate( 0deg )
	to
		-webkit-transform scale( 1 ) rotate( 360deg )
		transform scale( 1 ) rotate( 360deg )

#volumelist
	margin-left 0px

.volumetop
	width 100%
	background #000000
	a
		color white


.volumelink
	display inline-block
	width 80%
	padding 10px 0px 10px 10px
	margin-right 10px
	white-space nowrap
	text-overflow ellipsis
	overflow hidden



.chapterlink
	display inline-block
	width 80%
	padding 10px 0px 10px 10px
	margin-right 10px
	white-space nowrap
	text-overflow ellipsis
	overflow hidden

.progresswrapper
	position relative
	width 80%
	padding 10px 0px 10px 10px
.progress
	margin 0px 0px 0px 0px
.cap
	position absolute
	text-align center
	width 100%
	font-size x-small

.cap
	color black

.progress
	background-color #F2F2F2
	background-image linear-gradient(to bottom, #FAFAFA, #F2F2F2, #FAFAFA)
